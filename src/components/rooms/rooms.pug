include ../subtitle/subtitle
include ../rooms-item/rooms-item

mixin rooms({ roomsOptions, description, subtitle="Выбор комнаты" })
  - description = description || "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsam tempore asperiores consectetur officia facilis corrupti aut minima accusamus et porro numquam, nisi, reprehenderit natus, corporis voluptate mollitia quis deleniti tempora quo repellat non, ullam placeat! Id ea, quaerat harum sapiente provident autem quidem minima similique! Aperiam aut ratione in dolores.";
  - var { buttonOptions, items } = roomsOptions;
  
  section.rooms
    .rooms__subtitle
      +subtitle(subtitle)
    p.rooms__description= description
    ul.rooms__list
      each itemOptions in items
        .rooms__item
          +rooms-item({ buttonOptions, itemOptions })
