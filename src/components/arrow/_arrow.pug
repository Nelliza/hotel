mixin arrow(orientation, condition="")
  if orientation == "left"
    - points = "5.8,3 3.8,5 5.8,7"
  else if orientation == "right"
    - points = "4.3,3 6.3,5 4.3,7"
  - orientation = "arrow--" + orientation
  if condition
    - condition = "arrow--" + condition

  svg(class=["arrow", orientation, condition], viewBox="0 0 10 10")
    circle(class="arrow__circle", cx="5", cy="5", r="4.7")
    polyline(class="arrow__polyline", points=points)