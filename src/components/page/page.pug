section.page__buttons
  .page__subtitle
    +subtitle("Standard buttons")
  .page__buttons-wrapper
    - for (var i = 0; i < 3; i += 1)
      +button({
        size: "small",
        tag: "button"
      })
      +button({
        tag: "button"
      })
      +button({
        color: "warning",
        tag: "button"
      })
      +button({
        color: "warning",
        size: "small",
        tag: "button"
      })

section.page__arrows
  .page__subtitle
    +subtitle("Arrow buttons")
  .page__arrows-wrapper
    .page__arrow
      +arrow({
        orientation: "prev"
      })
    .page__arrow
      +arrow({
        orientation: "next"
      })
    .page__arrow
      +arrow({
        orientation: "prev",
        disabled: "disabled"
      })
    .page__arrow
      +arrow({
        orientation: "next",
        disabled: "disabled"
      })
    .page__arrow
      +arrow({
        orientation: "prev"
      })
    .page__arrow
      +arrow({
        orientation: "next"
      })

section.page__percentages
  .page__subtitle
    +subtitle("Percentages / Pie chart")
  .page__percentages-wrapper
    .page__percentage
      +percentage({
        percent: 0
      })
    .page__percentage
      +percentage({
        percent: 38
      })
    .page__percentage
      +percentage({
        percent: 62
      })
    .page__percentage
      +percentage({
        percent: 89
      })
    .page__pie-chart
      +pie-chart({
        items: [
          {
            percent: 10,
            fill: "#747474"
          },
          {
            percent: 25,
            fill: "#e75735"
          },
          {
            percent: 30,
            fill: "#4eb7a8"
          },
          {
            percent: 35,
            fill: "#e5e5e5"
          }
        ]
      })

section.page__sliders.js-page__sliders
  .page__subtitle
    +subtitle("Sliders")
  .page__sliders-wrapper
    .page__slider
      +slider({
        modifier: "warning",
        type: "pointer"
      })
    .page__slider
      +slider({
        type: "scale"
      })

section.page__stages.js-page__stages
  .page__subtitle
    +subtitle("Stages")
  +stages({
    count: 5
  })

section.page__form-elements
  .page__subtitle
    +subtitle("Form Elements")
  .page__form-elements-wrapper
    .page__form
      +form()
    .page__fieldset-wrapper
      section.page__toggles
        .page__subtitle
          +subtitle("Toggles")
        form.page__toggles-wrapper(action="./handler.php")
          +toggle({
            id: 1
          })
          +toggle({
            id: 2,
            isChecked: true
          })
      section.page__tick-boxes
        .page__subtitle
          +subtitle("Tick Boxes")
        form.page__tick-boxes-wrapper(action="./handler.php")
          +tickBox({
            id: 1,
            isChecked: true
          })
          +tickBox({
            id: 2
          })

.page__two-sections-wrapper
  section.page__search
    .page__subtitle
      +subtitle("Search / Drop Down")
    +search({
      btnColor: "warning"
    })
    +search({
      btnColor: "warning",
      modifier: "notfound",
      placeholder: "I've not found what I'm looking for..."
    })
    form.dropdown(action="./handler.php")
      +dropdown()

  section.page__user-profile
    .page__subtitle
      +subtitle("User Profile")
    .page__user-profile
      +userProfile({
        name: "John Smith",
        photo: "john-smith",
        profession: "UX Designer",
        modifier: "additional"
      })
    .page__user-profile
      +userProfile({
        name: "Sarah Brown",
        photo: "sarah-brown",
        profession: "Developer",
        modifier: "primary"
      })

section.page__news-list
