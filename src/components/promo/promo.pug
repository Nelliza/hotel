include ../promo-image/promo-image
include ../button/button

mixin promo({ imageItems, buttonColor, header, text, buttonText="Подробнее", buttonLink="./handler.php" })
  - header = header || "Добро пожаловать в наш отель!";
  - text = text || "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec malesuada lorem maximus mauris sceleri sque, at rutrum nulla dictum. Ut ac ligula sapien. Suspendisse cursus faucibus finibus.";

  section.promo
    .promo__carousel.js-promo__carousel.owl-carousel
      +promo-image(imageItems)
    .promo__content
      h3.promo__header= header
      p.promo__text= text
      .promo__button
        +button({
          color: buttonColor,
          text: buttonText,
          link: buttonLink
        })
