section.reservation
  .reservation__stages
    +stages({
      modifier: "primary",
      count: 3
    })

  .carousel.carousel--reservation.owl-carousel
    form.reservation__slide.reservation__slide--checkin(action="./handler.php")
      h3.reservation__header Выберите планируемую дату отдыха
      .reservation__item.reservation__item--checkin
        .calendar()
          .form__fieldset
            label.calendar__label(for="from") Дата заезда
              input(type="text", name="from")
        .calendar()
          .form__fieldset
            label.calendar__label(for="to") Дата выезда
              input(type="text", name="to")
    form.reservation__slide.reservation__slide--basic(action="./handler.php")
      h3.reservation__header Основная информация
      .reservation__item
        p.reservation__text Количество взрослых
        .page__slider
          +slider({
            type: "pointer"
          })
      .reservation__item
        p.reservation__text Количество детей
        .page__slider
          +slider({
            type: "pointer"
          })
      .reservation__item
        p.reservation__text Количество комнат
        .page__slider
          +slider({
            type: "scale"
          })
      .reservation__item
        +toggle({
          id: 3,
          text: "Проживание с домашним питомцем"
        })
    form.reservation__slide.reservation__slide--additional(action="./handler.php")
      h3.reservation__header Дополнительная информация
      .reservation__item
        +dropDown({
          title: "Питание",
          values: ["Только завтрак", "Завтрак и ужин", "Трехразовое питание"]
        })
      .reservation__item
        +tickBox({
          id: 3,
          text: "Собственная ванная комната"
        })
      .reservation__item
        +tickBox({
          id: 4,
          text: "Наличие кухни в номере"
        })
      .reservation__item
        +tickBox({
          id: 5,
          text: "Наличие детской площадки"
        })
      .reservation__item
        +tickBox({
          id: 6,
          text: "Первая береговая линия"
        })
      +button({
        modifiers: "primary",
        text: "Подобрать номер",
        tag: "button",
        btnType: "submit"
      })