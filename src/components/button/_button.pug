mixin button({ color, size, location, text="Button", tag="a", link="#", btnType= "button" } = {})
  - var wrapperModifier = location ? `page__button_location_${location}` : false;
  - color = color ? `button_color_${color}` : false;
  - size = size ? `button_size_${size}` : false;
  - location = location ? `button_location_${location}` : false;

  div(class=["page__button", wrapperModifier])
    if tag == "button"
      button(class=["button", "js-button", color, size, location], type=btnType)= text
    else
      a(class=["button", "js-button", color, size, location], href=link)= text