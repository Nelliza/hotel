mixin pie-chart(percentages)
  div(class="pie-chart")
    svg(class="pie-chart__svg", viewBox="0 0 32 32")
      - var percent = 100
      - for (var i = percentages.length - 1; i >= 0; i--)
        circle(class="pie-chart__item", r="16", cx="16", cy="16", style="stroke: "+percentages[i].fill+"; stroke-dasharray: "+percent+" 100; z-index: "+(percentages.length-i))
        - percent = percent - percentages[i].percent
      circle(class="pie-chart__center", r="10", cx="16", cy="16")