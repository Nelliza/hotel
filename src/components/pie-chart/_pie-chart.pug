mixin pie-chart(percentages)
  div(class="pie-chart")
    svg(class="pie-chart__svg", viewBox="0 0 32 32")
      - var percent = 100
      - for (var x = percentages.length - 1; x >= 0; x--)
        circle(class="pie-chart__item", r="16", cx="16", cy="16", style="stroke: "+percentages[x].fill+"; stroke-dasharray: "+percent+" 100; z-index: "+(percentages.length-x))
        - percent = percent - percentages[x].percent
      circle(class="pie-chart__center", r="10", cx="16", cy="16")