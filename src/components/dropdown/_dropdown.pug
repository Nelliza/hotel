mixin dropdown(options={})
  - options.modifier = options.modifier ? "dropdown__select--" + options.modifier : false
  - options.title = options.title || "Choose An Option"
  - options.values = options.values || ["Option 1", "Option 2"]

  select(class=["dropdown__select", "js-dropdown__select", options.modifier])
    option(selected, disabled, style="display: none")= options.title
    - for (var i = 0; i < options.values.length; i++)
      option= options.values[i]