mixin user-profile({ photo, name, profession, modifier, iconItems })
  - var linkModifier = modifier ? `user-profile__social-link_type_${modifier}` : false;
  - modifier = modifier ? `user-profile__info_type_${modifier}` : false;
  -
    iconItems = iconItems || [
      {
        name: 'facebook',
        link: 'https://facebook.com'
      },
      {
        name: 'twitter',
        link: 'https://twitter.com'
      },
      {
        name: 'dribbble',
        link: 'https://dribbble.com'
      }
    ];

  .user-profile
    img.user-profile__photo(src=require(`../assets/images/${photo}.jpg`), alt=name)
    div(class=["user-profile__info", modifier])
      span.user-profile__name= name
      span.user-profile__profession= profession
      ul.user-profile__social
        each item in iconItems
          - var { name, link } = item;
          li.user-profile__social-icon
            a(class=["user-profile__social-link", `user-profile__social-link_name_${name}`, linkModifier], href=link, target="_blank", rel="noopener noreferrer")
