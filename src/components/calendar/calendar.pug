mixin calendar({ withRange, inputLabels=["Дата заезда", "Дата выезда"] } = {})
  - var modifier = withRange ? "calendar_with-range js-calendar_with-range" : false;

  div(class=["calendar", "js-calendar", modifier])
    if !withRange
      .calendar__day.js-calendar__day
      .calendar__datepicker.js-calendar__datepicker
      button.calendar__today.js-calendar__today today
    else
      label.calendar__label(for="from")= inputLabels[0]
        input.calendar__input-datepicker.js-calendar__input-datepicker(name="from", type="text")
      label.calendar__label(for="to")= inputLabels[1]
        input.calendar__input-datepicker.js-calendar__input-datepicker(name="to", type="text")
