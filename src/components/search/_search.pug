mixin search(options={})
  - options.btnColor = options.btnColor ? "search__submit--" + options.btnColor : false;
  - options.modifier = options.modifier ? "search--" + options.modifier : false;
  - options.placeholder = options.placeholder || "Search";

  form(class=["search", options.modifier], action="./handler.php")
    input.search__input(type="text", placeholder=options.placeholder)
    button(class=["search__submit", options.btnColor], type="submit")