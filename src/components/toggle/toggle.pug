mixin toggle({ id, modifier, width="3.7rem", height="1.5rem", checked=false, text="" })
  - modifier = modifier ? `toggle__background_color_${modifier}` : false;

  .toggle
    label.toggle__label(for=`toggle${id}`)
      span= text
    .toggle__button(width=width, height=height)
      input.toggle__checkbox(type="checkbox", id=`toggle${id}`, checked=checked)
      div(class=["toggle__background", modifier])
      span.toggle__round
