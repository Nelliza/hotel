mixin percentage(percent, fill="#e75735")
  div(class="percentage", data-percent=percent)
    svg(class="percentage__svg", viewBox="0 0 32 32")
      circle(class="percentage__item", r="16", cx="16", cy="16", style="stroke: "+fill+"; stroke-dasharray: "+percent+" 100")
      circle(class="percentage__center", r="10", cx="16", cy="16")