mixin promoList(options)
  - options.btnColor = options.btnColor || "primary"

  each item in options.items
    .carousel__item
      .promo__img(style="background: url(" + require("../components/promo/" + item.image + ".jpg") + ") no-repeat center")
      .promo__content
        h3.promo__header= item.header
        p.promo__text= item.text
        +button({
          modifiers: options.btnColor,
          text: "Подробнее",
          link: item.link
        })