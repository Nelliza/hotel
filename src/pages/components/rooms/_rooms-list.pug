mixin roomsList(options)
  - options.btnColor = options.btnColor || "primary"

  each item in options.items
    li.rooms__item
      .rooms__img(style="background: url("+require("../components/rooms/"+item.image+".jpg")+") no-repeat center")
      span.rooms__price От $#{item.price}/сутки
      .rooms__content
        h3.rooms__header= item.header
        p.rooms__text= item.text
      +button({
        modifiers: options.btnColor,
        text: "Забронировать",
        link: item.link
      })