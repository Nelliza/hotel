include ../../components/subtitle/_subtitle
include ../../components/button/_button
include ../../components/arrow/_arrow
include ../../components/slider/_slider
include ../../components/stages/_stages
include ../../components/form/_form
include ../../components/toggle/_toggle
include ../../components/tick-box/_tick-box
include ../../components/search/_search
include ../../components/drop-down/_drop-down
include ../../components/messaging/_messaging

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Подбор апартаментов
    script(src="https://api-maps.yandex.ru/2.1/?apikey=aba3cd86-c704-4688-a291-3ec61529513e&lang=en_US", type="text/javascript")
  body.page.page--hotel
    include ../components/header/header

    .center-layer
      +stages({
        id: 2,
        count: 3,
        color: "primary"
      })

      form(id="form3", class="form", data-id="3")
        input(type="text", id="name3", name="name", placeholder="Ваше имя")
        input(type="text", id="email3", name="email", placeholder="Ваш email")

        .calendar#calendar
          label.calendar__datepicker(for="from") From
          input(type="text", id="from", name="from")
        .calendar#calendar
          label.calendar__datepicker(for="to") to
          input(type="text", id="to", name="to")

        +slider({
          id: 1,
          type: "pointer"
        })
        +slider({
          id: 2,
          type: "scale"
        })

        +dropDown("primary")

        +button({
          classes: "form__button",
          modifiers: "primary",
          text: "Подобрать",
          tag: "button",
          btnType: "submit"
        })

    include ../components/footer/footer

    include ../components/callback/callback

    script(src="./app.js")